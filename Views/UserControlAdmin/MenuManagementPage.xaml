<UserControl x:Class="DevCoffeeManagerApp.Views.UserControlAdmin.MenuManagementPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Medium"
             TextElement.FontSize="14"
             FontFamily="{materialDesign:MaterialDesignFont}"
             xmlns:local="clr-namespace:DevCoffeeManagerApp.Config"
             xmlns:vms="clr-namespace:DevCoffeeManagerApp.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="2500"
             d:DesignWidth="1200">
    <UserControl.Resources>
        <local:ToStringConverter x:Key="ToStringConverter"/>
        <Style x:Key="myHeaderStyle"
               TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility"
                    Value="Collapsed" />
        </Style>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vms:AdminMenuViewModel />
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="16*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <SolidColorBrush Color="Transparent" />
            </Grid.Background>
            <materialDesign:ColorZone Padding="auto"
                                      VerticalAlignment="Center"
                                      Mode="PrimaryMid">
                <materialDesign:ColorZone.Background>
                    <SolidColorBrush Color="White"
                                     Opacity="0" />
                </materialDesign:ColorZone.Background>
                <DockPanel>
                    <TextBlock Text="Quản lý món ăn"
                               FontSize="18"
                               Foreground="Black"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="25 0 0 0" />
                    <TextBlock Text="{Binding Date, StringFormat='dd MMM yyyy, dddd'}"
                               Foreground="SlateGray"
                               FontSize="14"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               DockPanel.Dock="Right"
                               Margin="0 0 25 0" />
                </DockPanel>
            </materialDesign:ColorZone>
        </Grid>
        <Grid Margin="25 0 25 10"
              Grid.Row="1">
            <Border BorderBrush="#5f5555"
                    BorderThickness="0.5"
                    CornerRadius="10"
                    Margin="0,10,0,0"
                    Background="White"
                    Grid.Column="0">
                <ScrollViewer>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="5*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                            <RowDefinition Height="1*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <DockPanel Margin="25 10 0 10">
                                <TextBlock Text="Danh sách món ăn:"
                                           VerticalAlignment="Center" />
                                <Grid Width="auto"
                                      DockPanel.Dock="Right">
                                    <ComboBox ItemsSource="{Binding types_dish}"
                                              SelectedItem="{Binding Type, UpdateSourceTrigger=PropertyChanged}"
                                              x:Name="ComboBoxType"
                                              Padding="12"
                                              Margin="0 0 20 0"
                                              HorizontalAlignment="Right"
                                              Width="180"
                                              materialDesign:HintAssist.Hint="Loại món"
                                              Opacity="1"
                                              FontSize="12"
                                              BorderThickness="0"
                                              Foreground="Black"
                                              Background="#FFFAFAFA">
                                        <ComboBox.Effect>
                                            <DropShadowEffect  Direction="230"
                                                               ShadowDepth="3"
                                                               Color="Gray"
                                                               Opacity="0.2"
                                                               BlurRadius="2" />
                                        </ComboBox.Effect>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="SelectionChanged">
                                                <i:InvokeCommandAction Command="{Binding SelectionChangeType}"
                                                                       CommandParameter="{Binding ElementName=ComboBoxType}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </ComboBox>
                                </Grid>
                                
                            </DockPanel>

                        </Grid>
                        <Border BorderBrush="#5f5555"
                                BorderThickness="0.5"
                                CornerRadius="10"
                                Grid.Row="1"
                                Margin="25 0 20 0"
                                Height="490">
                            <Grid>
                                <ListView ItemsSource="{Binding CombineList}">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.ColumnHeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="FontSize"
                                                            Value="15" />
                                                    <Setter Property="FontFamily"
                                                            Value="Nunito" />
                                                    <Setter Property="Margin"
                                                            Value="0" />
                                                    <Setter Property="Padding"
                                                            Value="10" />
                                                    <Setter Property="Foreground"
                                                            Value="Black" />
                                                    <Setter Property="HorizontalContentAlignment"
                                                            Value="Left" />
                                                </Style>
                                            </GridView.ColumnHeaderContainerStyle>
                                            <GridViewColumn Width="70">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent"
                                                                      Padding="0"
                                                                      Margin="10 0 0 0">
                                                    STT
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item2}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="200">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Tên món
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item1.dish_name}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="150">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Loại món
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item1.category}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="250">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Nguyên liệu
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item1.ingredient, Converter={StaticResource ToStringConverter}}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="100">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Giá
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item1.price, UpdateSourceTrigger=PropertyChanged}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="200">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Ảnh
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Image Height="120"
                                                               Width="auto"
                                                               Source="{Binding Item1.imageconvert}"
                                                               Stretch="UniformToFill" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="100">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Delete
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Panel.ZIndex="0"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}"
                                                                Command="{Binding DataContext.DeleteDishCommand ,UpdateSourceTrigger=PropertyChanged  ,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                CommandParameter="{Binding Item1}">
                                                            <materialDesign:PackIcon Foreground="#5F5555"
                                                                                     Opacity=".80"
                                                                                     Kind="DeleteForever"
                                                                                     Width="30"
                                                                                     Height="25" />
                                                        </Button>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>

                        <Border BorderBrush="#5f5555"
                                BorderThickness="0.5"
                                CornerRadius="10"
                                Grid.Row="2"
                                Margin="25 20 20 20">
                            <Grid Margin="25 10 25 20"
                                  Height="500">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"></RowDefinition>
                                    <RowDefinition Height="460"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock Text="Thêm món ăn:"
                                               VerticalAlignment="Center"
                                               Margin="0 10 0 0"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                    <Border BorderBrush="Black"
                                            BorderThickness="0 0 0 0.5" />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50"></RowDefinition>
                                        <RowDefinition Height="360"></RowDefinition>
                                        <RowDefinition Height="50"></RowDefinition>

                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0"
                                          VerticalAlignment="Center">
                                        <WrapPanel>
                                            <TextBlock VerticalAlignment="Center"
                                                       Text="Tên món ăn:" />
                                            <TextBox Text="{Binding DishName, UpdateSourceTrigger=PropertyChanged}"
                                                     materialDesign:HintAssist.Hint="Nhập tên món ăn"
                                                     IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                                     Style="{StaticResource MaterialDesignFilledTextBox}"
                                                     TextWrapping="Wrap"
                                                     Width="163"
                                                     Height="auto"
                                                     Background="#f0f0f0"
                                                     Margin="10 0 10 0"
                                                     Padding="5 0 5 0">
                                            </TextBox>
                                            <Button materialDesign:ButtonAssist.CornerRadius="10"
                                                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                    Style="{StaticResource MaterialDesignRaisedLightButton}"
                                                    ToolTip="MaterialDesignRaisedLightButton with Round Corners"
                                                    VerticalAlignment="Bottom"
                                                    Command="{Binding ChooseimageCommand}"
                                                    Width="100">

                                                <Button.BorderBrush>
                                                    <ImageBrush />
                                                </Button.BorderBrush>
                                                <Button.Background>
                                                    <SolidColorBrush Color="#e87f14" />
                                                </Button.Background>
                                                <TextBlock FontFamily="Nunito"
                                                           Text="Chọn ảnh"
                                                           Foreground="White" />
                                            </Button>
                                            <TextBlock VerticalAlignment="Center"
                                                       Text="{Binding Pathimage,UpdateSourceTrigger=PropertyChanged}" />
                                        </WrapPanel>
                                    </Grid>

                                    <Border BorderBrush="#5f5555"
                                            BorderThickness="0.5"
                                            CornerRadius="10"
                                            Grid.Row="1"
                                            Margin="0 0 0 10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"></RowDefinition>
                                                <RowDefinition Height="auto"
                                                               MaxHeight="380"></RowDefinition>
                                                <RowDefinition Height="50"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <TextBlock Text="Nguyên liệu:"
                                                           VerticalAlignment="Bottom"
                                                           Margin="10 0 0 0" />
                                            </Grid>
                                            <Grid Grid.Row="1"
                                                  Margin="10 10 10 0">
                                                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                          ItemsSource="{Binding CombineListIngredient}"
                                                          MaxHeight="250">
                                                    <ListView.View>
                                                        <GridView ColumnHeaderContainerStyle="{StaticResource myHeaderStyle}">
                                                            <GridViewColumn Width="70">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Item2}"
                                                                                   FontSize="13" />
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <GridViewColumn Width="100">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Item1.Product_name}"
                                                                                   FontSize="13" />
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <GridViewColumn Width="85">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Item1.Stock}"
                                                                                   FontSize="13" />
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                            <GridViewColumn Width="90">
                                                                <GridViewColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Item1.Unit}"
                                                                                   FontSize="13" />
                                                                    </DataTemplate>
                                                                </GridViewColumn.CellTemplate>
                                                            </GridViewColumn>
                                                        </GridView>
                                                    </ListView.View>
                                                </ListView>

                                            </Grid>
                                            <Grid Grid.Row="2"
                                                  Margin="10 0 10 0">
                                                <WrapPanel>
                                                    <Grid Width="162.5"
                                                          HorizontalAlignment="Left"
                                                          Margin="10 0 15 0">
                                                        <ComboBox Padding="0 5.5 0 0"
                                                                  Style="{StaticResource MaterialDesignFilledComboBox}"
                                                                  Background="Transparent"
                                                                  ItemsSource="{Binding ProductList}"
                                                                  SelectedItem="{Binding Product_name}">
                                                            <materialDesign:HintAssist.Hint>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon VerticalAlignment="Center"
                                                                                             Width="25px"
                                                                                             Height="20px"
                                                                                             Kind="CardPlusOutline" />
                                                                    <TextBlock FontSize="16px"
                                                                               Text="Tên nguyên liệu" />
                                                                </StackPanel>
                                                            </materialDesign:HintAssist.Hint>
                                                        </ComboBox>
                                                    </Grid>
                                                    <Grid Width="100"
                                                          HorizontalAlignment="Left"
                                                          Margin="0 0 15 0">
                                                        <TextBox VerticalAlignment="Center"
                                                                 FontSize="15"
                                                                 Text="{Binding Stock}"
                                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                                 Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                                            <materialDesign:HintAssist.Hint>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon VerticalAlignment="Center"
                                                                                             Width="25px"
                                                                                             Height="20px"
                                                                                             Kind="CardPlusOutline" />
                                                                    <TextBlock FontSize="14px"
                                                                               Text="Số lượng"
                                                                               VerticalAlignment="Center" />
                                                                </StackPanel>
                                                            </materialDesign:HintAssist.Hint>
                                                        </TextBox>
                                                    </Grid>
                                                    <Grid>
                                                        <Button materialDesign:ButtonAssist.CornerRadius="10"
                                                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                                Style="{StaticResource MaterialDesignRaisedLightButton}"
                                                                ToolTip="MaterialDesignRaisedLightButton with Round Corners"
                                                                VerticalAlignment="Bottom"
                                                                Command="{Binding AddIngredientCommand}"
                                                                Width="100">
                                                            
                                                            <Button.BorderBrush>
                                                                <ImageBrush />
                                                            </Button.BorderBrush>
                                                            <Button.Background>
                                                                <SolidColorBrush Color="#e87f14" />
                                                            </Button.Background>
                                                            <TextBlock FontFamily="Nunito"
                                                                       Text="Thêm"
                                                                       Foreground="White" />
                                                        </Button>
                                                    </Grid>
                                                </WrapPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>


                                    <Grid Grid.Row="2"
                                          VerticalAlignment="Center">
                                        <WrapPanel>
                                            <Grid Margin="0 0 20 0">
                                                <WrapPanel>
                                                    <TextBlock VerticalAlignment="Bottom"
                                                               Text="Loại món:"
                                                               Margin="0 0 10 0"/>
                                                    <ComboBox Padding="0 0 0 0"
                                                              Style="{StaticResource MaterialDesignFilledComboBox}"
                                                              Background="Transparent"
                                                              ItemsSource="{Binding MenuList}"
                                                              SelectedItem="{Binding ItemMenu}">
                                                        <materialDesign:HintAssist.Hint>
                                                            <StackPanel Orientation="Horizontal">
                                                                <materialDesign:PackIcon VerticalAlignment="Center"
                                                                                         Width="25px"
                                                                                         Height="20px"
                                                                                         Kind="CardPlusOutline" />
                                                                <TextBlock FontSize="16px"
                                                                           Text="Tên loại món" />
                                                            </StackPanel>
                                                        </materialDesign:HintAssist.Hint>
                                                    </ComboBox>
                                                </WrapPanel>
                                            </Grid>
                                            <Grid>
                                                <WrapPanel>
                                                    <TextBlock VerticalAlignment="Bottom"
                                                               Text="Đơn giá:" />
                                                    <TextBox Text="{Binding PriceDish, UpdateSourceTrigger=PropertyChanged}"
                                                             materialDesign:HintAssist.Hint="Nhập đơn giá"
                                                             IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                                             Style="{StaticResource MaterialDesignFilledTextBox}"
                                                             TextWrapping="Wrap"
                                                             Width="140"
                                                             Height="auto"
                                                             Background="#f0f0f0"
                                                             Margin="10 0 0 0"
                                                             Padding="5 0 5 3">
                                                    </TextBox>
                                                </WrapPanel>
                                            </Grid>
                                            <Grid VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  Margin="20 0 0 0">
                                                <Button materialDesign:ButtonAssist.CornerRadius="10"
                                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                                        ToolTip="MaterialDesignRaisedLightButton with Round Corners"
                                                        Command="{Binding AddDishCommand, UpdateSourceTrigger=PropertyChanged}"
                                                        Width="130">
                                                    <Button.BorderBrush>
                                                        <ImageBrush />
                                                    </Button.BorderBrush>
                                                    <Button.Background>
                                                        <SolidColorBrush Color="#e87f14" />
                                                    </Button.Background>
                                                    <TextBlock FontFamily="Nunito"
                                                               Text="Thêm"
                                                               Foreground="White" />
                                                </Button>
                                            </Grid>
                                        </WrapPanel>
                                    </Grid>
                                </Grid>

                            </Grid>
                        </Border>

                        <Grid Grid.Row="3"
                              Margin="25 20 0 10">
                            <TextBlock Text="Danh sách loại món:"
                                       VerticalAlignment="Center" />
                        </Grid>
                        <Border BorderBrush="#5f5555"
                                BorderThickness="0.5"
                                CornerRadius="10"
                                Grid.Row="4"
                                Margin="25 10 20 10"
                                Height="300">
                            <Grid>
                                <ListView Name="lvmenus"
                                          ItemsSource="{Binding CombineListMenu}">
                                    <ListView.View>
                                        <GridView>
                                            <GridView.ColumnHeaderContainerStyle>
                                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                                    <Setter Property="FontSize"
                                                            Value="15" />
                                                    <Setter Property="FontFamily"
                                                            Value="Nunito" />
                                                    <Setter Property="Margin"
                                                            Value="0" />
                                                    <Setter Property="Padding"
                                                            Value="10" />
                                                    <Setter Property="Foreground"
                                                            Value="Black" />
                                                    <Setter Property="HorizontalContentAlignment"
                                                            Value="Left" />
                                                </Style>
                                            </GridView.ColumnHeaderContainerStyle>
                                            <GridViewColumn Width="70">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent"
                                                                      Padding="0"
                                                                      Margin="10 0 0 0">
                                                    STT
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item2}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="220">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Loại món
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item1.type_of_dish}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="400">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Mô tả 
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Item1.detail}"
                                                                   FontSize="13" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn Width="100">
                                                <GridViewColumnHeader FontFamily="Nunito"
                                                                      FontWeight="DemiBold"
                                                                      Background="Transparent">
                                                    Delete
                                                </GridViewColumnHeader>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Panel.ZIndex="0"
                                                                Style="{StaticResource MaterialDesignToolForegroundButton}"
                                                                Command="{Binding DataContext.DeleteMenuCommand ,UpdateSourceTrigger=PropertyChanged  ,RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                                CommandParameter="{Binding Item1}">
                                                            <materialDesign:PackIcon Foreground="#5F5555"
                                                                                     Opacity=".80"
                                                                                     Kind="DeleteForever"
                                                                                     Width="30"
                                                                                     Height="25" />
                                                        </Button>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>
                        <Border BorderBrush="#5f5555"
                                BorderThickness="0.5"
                                CornerRadius="10"
                                Grid.Row="5"
                                Margin="25 10 20 20">
                            <Grid Margin="25 10 25 20"
                                  Height="140">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"></RowDefinition>
                                    <RowDefinition Height="100"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock Text="Thêm loại món:"
                                               VerticalAlignment="Center"
                                               Margin="0 10 0 0"
                                               FontSize="16"
                                               FontWeight="Bold" />
                                    <Border BorderBrush="Black"
                                            BorderThickness="0 0 0 0.5" />
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid VerticalAlignment="Center">
                                        <StackPanel>
                                            <WrapPanel Margin="0 10 0 10">
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="Tên loại món:" />
                                                <TextBox Text="{Binding MenuName, UpdateSourceTrigger=PropertyChanged}"
                                                         materialDesign:HintAssist.Hint="Nhập tên loại món"
                                                         IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                                         TextWrapping="Wrap"
                                                         Width="163"
                                                         Height="auto"
                                                         Background="#f0f0f0"
                                                         Margin="10 0 20 0"
                                                         Padding="5 0 5 0">
                                                </TextBox>
                                                <TextBlock VerticalAlignment="Center"
                                                           Text="Mô tả:" />
                                                <TextBox Text="{Binding DescriptionMenu, UpdateSourceTrigger=PropertyChanged}"
                                                         materialDesign:HintAssist.Hint="Nhập mô tả"
                                                         IsEnabled="{Binding IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                                         Style="{StaticResource MaterialDesignFilledTextBox}"
                                                         TextWrapping="Wrap"
                                                         Width="400"
                                                         Height="auto"
                                                         Background="#f0f0f0"
                                                         Margin="10 0 0 0"
                                                         Padding="5 0 5 0">
                                                </TextBox>
                                                <Button materialDesign:ButtonAssist.CornerRadius="10"
                                                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                                        Style="{StaticResource MaterialDesignRaisedLightButton}"
                                                        ToolTip="MaterialDesignRaisedLightButton with Round Corners"
                                                        HorizontalAlignment="Left"
                                                        Margin="50 10 0 0"
                                                        Command="{Binding AddMenuCommand}"
                                                        Width="100">
                                                    <Button.BorderBrush>
                                                        <ImageBrush />
                                                    </Button.BorderBrush>
                                                    <Button.Background>
                                                        <SolidColorBrush Color="#e87f14" />
                                                    </Button.Background>
                                                    <TextBlock FontFamily="Nunito"
                                                               Text="Thêm"
                                                               Foreground="White" />
                                                </Button>
                                            </WrapPanel>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
